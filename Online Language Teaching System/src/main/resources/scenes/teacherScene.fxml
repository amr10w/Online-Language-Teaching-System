<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TeacherSceneController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: -fx-primary-color; -fx-padding: 10 20;">
            <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                <!-- Using relative path -->
                <Image url="@../images/lovebird.png" />
            </ImageView>
            <Label style="-fx-text-fill: #000000;" styleClass="app-name" text="LinguaLearn" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="5.0">
                <Label style="-fx-text-fill: #000000;" styleClass="welcome-text" text="Welcome," />
                <!-- fx:id matches controller -->
                <Label fx:id="teacherNameLabel" style="-fx-text-fill: #000000;" styleClass="welcome-text" text="Teacher Name" />
                <Label style="-fx-text-fill: #000000;" styleClass="welcome-text" text="| Teaching:" />
                <!-- fx:id matches controller -->
                <Label fx:id="languageLabel" style="-fx-text-fill: #000000;" styleClass="welcome-text" text="Language" />
            </HBox>
            <!-- onAction matches controller -->
            <Button onAction="#logout" text="Logout">
                <HBox.margin><Insets left="20.0" /></HBox.margin>
            </Button>
        </HBox>
    </top>
    <center>
        <VBox spacing="30.0" styleClass="content-area">
            <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>
            <Label styleClass="page-title" text="Teacher Dashboard" />
            <!-- Stats Section -->
            <HBox alignment="CENTER" spacing="20.0">
                <VBox alignment="CENTER" styleClass="dashboard-stats" HBox.hgrow="ALWAYS">
                    <!-- fx:id matches controller -->
                    <Label fx:id="lessonsCreatedValue" styleClass="stat-value" text="0" />
                    <Label styleClass="stat-label" text="Lessons Created" />
                </VBox>
                <VBox alignment="CENTER" styleClass="dashboard-stats" HBox.hgrow="ALWAYS">
                    <!-- fx:id matches controller -->
                    <Label fx:id="studentsValue" styleClass="stat-value" text="0" />
                    <Label styleClass="stat-label" text="Total Students" />
                </VBox>
                <VBox alignment="CENTER" styleClass="dashboard-stats" HBox.hgrow="ALWAYS">
                    <!-- fx:id matches controller -->
                    <Label fx:id="balanceValue" styleClass="stat-value" text="$0.00" />
                    <Label styleClass="stat-label" text="Balance" />
                </VBox>
            </HBox>
            <!-- Actions Section -->
            <VBox spacing="15.0">
                <Label style="-fx-font-size: 18px;" styleClass="page-title" text="Teacher Actions" />
                <HBox spacing="20.0">
                    <!-- Create Lesson Box -->
                    <VBox alignment="CENTER" prefHeight="150.0" prefWidth="250.0" styleClass="dashboard-stats" VBox.vgrow="NEVER">
                        <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                            <!-- Using relative path -->
                            <Image url="@../images/lesson-icon.png" />
                        </ImageView>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Create New Lesson" />
                        <Label text="Add a new lesson to your course" textAlignment="CENTER" wrapText="true" />
                        <Separator prefWidth="200.0" />
                        <!-- onAction matches controller -->
                        <Button onAction="#createLesson" text="Create Lesson" />
                        <padding><Insets bottom="10.0" top="10.0" /></padding>
                    </VBox>
                    <!-- Create Quiz Box -->
                    <VBox alignment="CENTER" prefHeight="150.0" prefWidth="250.0" styleClass="dashboard-stats" VBox.vgrow="NEVER">
                        <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                            <!-- Using relative path -->
                            <Image url="@../images/quiz-icon.png" />
                        </ImageView>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Create New Quiz" />
                        <Label text="Add a quiz (associates if lesson selected below)" textAlignment="CENTER" wrapText="true" />
                        <Separator prefWidth="200.0" />
                        <!-- onAction matches controller -->
                        <Button onAction="#createQuiz" text="Create Quiz" />
                        <padding><Insets bottom="10.0" top="10.0" /></padding>
                    </VBox>
                </HBox>
            </VBox>
            <!-- Recent Lessons Section -->
            <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                <Label styleClass="page-title" text="Your Lessons" style="-fx-font-size: 18px;" />
                <!-- fx:id matches controller -->
                <TableView fx:id="lessonsTableView" prefHeight="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <!-- fx:id matches controller -->
                        <TableColumn fx:id="lessonTitleCol" prefWidth="350.0" text="Lesson Title" />
                        <!-- fx:id matches controller -->
                        <TableColumn fx:id="lessonIdCol" prefWidth="150.0" text="Lesson ID" />
                        <!-- fx:id matches controller -->
                        <TableColumn fx:id="lessonLevelCol" prefWidth="100.0" text="Level" />
                    </columns>
                    <!-- REMOVED cellValueFactory and columnResizePolicy from FXML -->
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>